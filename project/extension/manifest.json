{
  "manifest_version": 3,
  "name": "AI Navigation Assistant",
  "version": "0.0.1",
  "action": {
    "default_title": "Toggle Assistant"
  },
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
